<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextEquation"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="70dp"
            android:ems="10"
            android:enabled="false"
            android:inputType="textMultiLine|textPersonName"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clipToPadding="false">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonExponent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#FFC107"
                    android:text="^"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/buttonSquareRoot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#FFC107"
                    android:text="âˆš"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/buttonFactorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#FFC107"
                    android:text="!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/buttonPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#FFC107"
                    android:text="%"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#2196F3"
                    android:text="C"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/buttonOpenParenthesis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#3F51B5"
                    android:text="("
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/buttonCloseParenthesis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#3F51B5"
                    android:text=")"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/buttonDivision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#FF9800"
                    android:text="/"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#00BCD4"
                    android:text="7"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#00BCD4"
                    android:text="8"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#00BCD4"
                    android:text="9"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/buttonMultiplication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#FF9800"
                    android:text="x"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#00BCD4"
                    android:text="4"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#00BCD4"
                    android:text="5"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#00BCD4"
                    android:text="6"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/buttonSubtraction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#FF9800"
                    android:text="-"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#00BCD4"
                    android:text="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#00BCD4"
                    android:text="2"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#00BCD4"
                    android:text="3"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/buttonAddition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#FF9800"
                    android:text="+"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#E81313"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:cornerRadius="30dp"
                    app:icon="@android:drawable/ic_input_delete"
                    app:iconGravity="textStart"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#00BCD4"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/buttonDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#3F51B5"
                    android:text="."
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/buttonEqual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:backgroundTint="#4CAF50"
                    android:text="="
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:cornerRadius="30dp" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

</LinearLayout>